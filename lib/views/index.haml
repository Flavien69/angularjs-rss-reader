%div(ng-controller="RssController")

  %form(ng-submit="fetchRss()")
    %input(type="text" ng-model="rssUrl" placeholder="e.g. http://digg.com/rss/top.rss")
    %input(type="submit" value="Fetch")
    %a(href="javascript:void(0);" ng-click="toggleHistory()")
      History

  %ul.rss-urls(style="display: {{historyDisplay}}")
    %hr
    %li.rss-url(ng-repeat="rssUrl in rssUrls")
      {{rssUrl}}

  %hr

  %ul.rss-entries
    %li.rss-entry(ng-repeat="rssEntry in rssEntries")
      .header
        %h2.title
          %a(href="{{rssEntry.link}}" target="_blank")
            {{rssEntry.title}}
        &middot;
        %i.published-date
          {{rssEntry.publishedDate}}
      .body
        {{rssEntry.contentSnippet}}

